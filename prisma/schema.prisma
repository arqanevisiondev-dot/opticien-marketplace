generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

enum UserRole {
  ADMIN
  OPTICIAN
}

enum OpticianStatus {
  PENDING
  APPROVED
  REJECTED
}

model User {
  id            String          @id @default(cuid())
  email         String          @unique
  password      String
  role          UserRole        @default(OPTICIAN)
  createdAt     DateTime        @default(now())
  updatedAt     DateTime        @updatedAt
  optician      Optician?
  emailCampaigns EmailCampaign[] @relation("CampaignCreator")
}

model Optician {
  id              String          @id @default(cuid())
  userId          String          @unique
  user            User            @relation(fields: [userId], references: [id], onDelete: Cascade)
  businessName    String
  firstName       String
  lastName        String
  phone           String
  whatsapp        String?
  address         String?
  city            String?
  postalCode      String?
  latitude        Float?
  longitude       Float?
  status          OpticianStatus  @default(PENDING)
  createdAt       DateTime        @default(now())
  updatedAt       DateTime        @updatedAt
  
  @@index([status])
  @@index([latitude, longitude])
}

model Supplier {
  id          String    @id @default(cuid())
  name        String
  email       String    @unique
  phone       String
  whatsapp    String?
  description String?   @db.Text
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
  products    Product[]
}

model Product {
  id          String   @id @default(cuid())
  supplierId  String
  supplier    Supplier @relation(fields: [supplierId], references: [id], onDelete: Cascade)
  name        String
  reference   String   @unique
  description String?  @db.Text
  material    String?
  gender      String?
  shape       String?
  color       String?
  price       Float
  images      String   @db.Text // JSON array of image URLs
  inStock     Boolean  @default(true)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  
  @@index([supplierId])
  @@index([material])
  @@index([gender])
  @@index([inStock])
}

model EmailCampaign {
  id          String   @id @default(cuid())
  creatorId   String
  creator     User     @relation("CampaignCreator", fields: [creatorId], references: [id])
  subject     String
  content     String   @db.Text
  targetRole  String?  // "ALL", "APPROVED", "PENDING", or specific region
  sentAt      DateTime @default(now())
  recipients  Int      @default(0)
  
  @@index([creatorId])
  @@index([sentAt])
}
