# Database - SQLite for development (simpler, no installation needed)
DATABASE_URL="file:./prisma/dev.db"

# For production with MySQL, use:
# DATABASE_URL="mysql://user:password@host:3306/opticien_marketplace"

# NextAuth
NEXTAUTH_URL="http://127.0.0.1:3000"
NEXTAUTH_SECRET="your-secret-key-here-change-in-production"

# WhatsApp Notifications (Optional - for Twilio integration)
# Sign up at https://www.twilio.com/whatsapp
# TWILIO_ACCOUNT_SID="your-twilio-account-sid"
# TWILIO_AUTH_TOKEN="your-twilio-auth-token"
# TWILIO_WHATSAPP_NUMBER="whatsapp:+14155238886"

# Email Configuration
SMTP_HOST="smtp.gmail.com"
SMTP_PORT="587"
SMTP_USER="your-email@gmail.com"
SMTP_PASSWORD="your-app-password"
SMTP_FROM="noreply@opticien-marketplace.com"

# Google Maps API (optional)
NEXT_PUBLIC_GOOGLE_MAPS_API_KEY="your-google-maps-api-key"

# Cloudinary (optional for image upload)
NEXT_PUBLIC_CLOUDINARY_CLOUD_NAME="your-cloud-name"
CLOUDINARY_API_KEY="your-api-key"
CLOUDINARY_API_SECRET="your-api-secret"
